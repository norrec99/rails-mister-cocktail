<div class="container">
<h2><%= @cocktail.name %></h2>
<ul class="list-group">
<% @cocktail.doses.each do |dose| %>
  <li class="list-group-item">
    <%= dose.description %> |
    <%= dose.ingredient.name %> |
    <%= link_to 'Destroy', dose, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>

  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

</ul>
<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Delete Cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
</div> 