<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to cocktails_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.zazzle.com/rlv/svc/view?realview=113464192529429564&design=d2c0056b-6734-4c2d-a1c0-a2d660c7294f&rlvnet=1&size=9inch&max_dim=540&cacheDefeat=1602967682377" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Home', cocktails_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>





<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1547146598-0962d0d87c97?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80);">
  <div class="container">
    <h1>Winter is coming!</h1>
    <p>Grab a cocktail to warm up</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="cards-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key, :crop => :fill) %> ')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>