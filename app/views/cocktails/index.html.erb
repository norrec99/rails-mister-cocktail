
    <div class="container">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
        <div class="container">
          <h1>Cocktails</h1>
          <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-flat" %>
        </div>
      </div>

      <div class="cards-grid">
      <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key, :crop => :fill) %> ')">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
      </div>
    </div>


