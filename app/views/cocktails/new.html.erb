<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to cocktails_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.zazzle.com/rlv/svc/view?realview=113464192529429564&design=d2c0056b-6734-4c2d-a1c0-a2d660c7294f&rlvnet=1&size=9inch&max_dim=540&cacheDefeat=1602967682377" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Home', cocktails_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <h1>New Cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.file_field :photo %>
    </div>

    <div class="form-actions btn btn-ghost mt-3">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>