<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.order(:name), input_html: { multiple: true, size: 10 }, include_hidden: false %>
    <%= f.button :submit, class: "btn btn-gradient" %>
  <% end %>
</div>